</head>
<body>
<div id="root"></div>
<script type="text/javascript">
  var map = new BMap.Map("map", {
    enableMapClick: false
  });
  map.centerAndZoom(new BMap.Point(105.403119, 38.028658), 5);
  map.enableScrollWheelZoom(true);

  map.setMapStyle({
    styleJson: [
      {
        "featureType": "all",
        "elementType": "all",
        "stylers": {
          "lightness": 80,
          "saturation": -100
        }
      }
    ]
  });
</script>
</body>
<script type="text/javascript">
  window.clientSideRender();
</script>
